{
  "name": "family-assistant",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nuxt dev",
    "build": "nuxt build",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "check": "oxfmt --check && oxlint --deny-warnings",
    "prepare": "husky",
    "setup-family": "tsx scripts/setup-family.ts"
  },
  "dependencies": {
    "@heroicons/vue": "^2.2.0",
    "@supabase/supabase-js": "^2.47.0",
    "@tanstack/vue-query": "^5.59.0",
    "@vueuse/core": "^11.2.0",
    "axios": "^1.7.0",
    "nuxt": "^3.14.0",
    "vue": "^3.5.0",
    "vue-router": "^4.4.0"
  },
  "devDependencies": {
    "@nuxtjs/tailwindcss": "^6.12.0",
    "@peterbud/nuxt-query": "^1.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "shadcn-nuxt": "^2.4.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs,jsx,tsx}": [
      "oxlint --fix",
      "oxfmt"
    ],
    "*.vue": [
      "oxlint --fix",
      "oxfmt"
    ],
    "*.{json,yaml,yml,md,html,css,scss}": [
      "oxfmt --no-error-on-unmatched-pattern"
    ]
  }
}
